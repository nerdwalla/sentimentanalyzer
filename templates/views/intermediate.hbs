<!DOCTYPE html>
<html>

<head>
    <title>Analyzer</title>
    <link rel="icon" href="/img/analyzer.png">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* The Modal (background) */
        .modal {
            display: none;
            /* Hidden by default */
            position: fixed;
            /* Stay in place */
            z-index: 1;
            /* Sit on top */
            padding-top: 10px;
            /* Location of the box */
            left: 0;
            top: 0;
            width: 100%;
            /* Full width */
            height: 100%;
            /* Full height */
            overflow-x: hidden;
            overflow-y: scroll;
            /* Enable scroll if needed */
            background-color: rgb(0, 0, 0);
            /* Fallback color */
            background-color: rgba(0, 0, 0, 0.4);
            /* Black w/ opacity */
        }

        /* Modal Content */
        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
        }

        .address-item {
            list-style-type: none;
            display: block;
            padding: 10px;
            border: 1px solid black;
        }

        ul {
            padding-left: 0;
        }

        #gobackBtn{
            
        }
        .button-div {
            display: block;
            padding: 10px;
            border: 1px solid black;
        }

        /* The Close Button */
        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

        a {
            color: #3266a8;
            text-decoration: none;
            text-transform: uppercase;
        }

        .btn-link {
            border: none;
            outline: none;
            background: none;
            cursor: pointer;
            color: #3266a8;
            padding: 0;
            position: relative;
            text-align: center;
        }
    </style>

</head>

<body>
    <div class="loading" style="display: none;">
        <div class="loader"></div>
    </div>
    <div id="boxes">
        <div id="right-box">
            <div class="icon-bar">
                <div><a href="/index">Home</a></div>
                <div><a href="/analyzer">Analyzer</a></div>
                <div><a href="/about">About</a></div>
                <div><a href="/sources">Sources</a></div>
            </div>
        </div>
        <div id="left-box">
            <div class="main-content">

                <div id="myModal" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">

                        Please select the location you are interested in:
                        {{#if addresses}}
                        <ul>
                            {{#each addresses}}
                            <form action="/result" method="POST">
                                <input type="text" id="bizInputHidden" class="user-textbox" name="bizInputHidden"
                                    value="{{this.url}}" style="display: none; width: 80%">
                                <input type="text" id="bizNameHidden" class="user-textbox" name="bizNameHidden"
                                    value="{{this.name}}" style="display: none; width: 80%">
                                <input type="text" id="bizLocationHidden" class="user-textbox" name="bizLocationHidden"
                                    value="{{this.location}}" style="display: none; width: 80%">
                                <div class="button-div">
                                    <button type="submit" onclick="myFunction()"
                                        class="btn-link">{{this.address}}</button>

                                </div>
                            </form>
                            {{/each}}
                        </ul>

                        {{else}}
                        <p>There are no documents available at this time</p>
                        {{/if}}
                        <form action="/analyzer">
                            <button type="submit" id="gobackBtn" class="user-input-button"
                                style="margin:0 auto; display:block;">Go
                                Back</button>

                    </div>
                    </form>
                </div>

            </div>
            <script>
                // Get the modal
                var modal = document.getElementById("myModal");

                // Get the <span> element that closes the modal
                var span = document.getElementsByClassName("close")[0];

                // When the user clicks the button, open the modal 
                $('.main-content').ready(function () {
                    modal.style.display = "inline-block";
                })

                // When the user clicks on <span> (x), close the modal
                span.onclick = function () {
                    modal.style.display = "none";
                }

                // When the user clicks anywhere outside of the modal, close it
                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }

                function myFunction() {
                    const modalDIV = document.querySelector('.modal')
                    modalDIV.style.display = "none";
                    const loaderDiv = document.querySelector('.loading')
                    loaderDiv.style.display = "block";
                }
            </script>
        </div>
    </div>
    </div>

    </div>

</body>

</html>